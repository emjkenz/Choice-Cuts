<style>
    .picker-container {
        text-align: center;
    }
    .meat-picker{
        position: relative;
        display: inline-block;
    }
    .meat-parts{
        position: absolute;
        top: 0;
    }
    .meat-parts img{
        position: absolute;
        top: 0;
        left: 0;
    }
    .meat-parts img[data-item='Briskit']{top: 174px;left: 156px;}
    .meat-parts img[data-item='Neck']{top: 15px;left: 97px;}
    .meat-parts img[data-item='Chuck']{top: 16px;left: 168px;}
    .meat-parts img[data-item='Shank Front']{top: 151px;left: 188px;}
    .meat-parts img[data-item='Rib']{top: 23px;left: 263px;}
    .meat-parts img[data-item='Short Plate']{top: 150px;left: 259px;}
    .meat-parts img[data-item='Short Loin']{top: 23px;left: 358px;}
    .meat-parts img[data-item='Flank']{top: 148px;left: 364px;}
    .meat-parts img[data-item='Sirloin']{top: 23px;left: 435px;}
    .meat-parts img[data-item='Tenderloin']{top: 53px;left: 368px;}
    .meat-parts img[data-item='Top Sirloin']{top: 85px;left: 426px;}
    .meat-parts img[data-item='Bottom Sirloin']{top: 109px;left: 424px;}
    .meat-parts img[data-item='Rump']{top: 23px;left: 496px;}
    .meat-parts img[data-item='Round']{top: 76px;left: 477px;}
    .meat-parts img[data-item='Shank Back']{top: 164px;left: 514px;}
    .meat-parts img[data-item='Ox Tail']{top: 28px;left: 543px;}

    h2 {
        text-align: center;
    }

    #shopping-cart{
        display: flex;
        justify-content: center;
        align-items: center;
    }
    #shopping-cart svg{
        height: 200px;
        width: 200px;
    }
    
    h3,
    #cart-items{
        text-align: center;
    }
    #cart-items .item{
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin: 10px 0;
        background: #f5f5f5;
        padding: 4px 8px;
        border-radius: 5px;
    }
    #cart-items .remove-item{
        cursor: pointer;
        background: none;
        border: none;
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h3>Product Name</h3>
            <div class="picker-container">
                <div class="meat-picker">
                    {{!-- Base image --}}
                    <div class="meat-base">
                        <img src="/assets/Head__Legs.png" alt="">
                    </div>
                    <div class="meat-parts">
                        <img class="draggable-item" data-item="Briskit" src="/assets/Brisket.png" alt="">
                        <img class="draggable-item" data-item="Neck" src="/assets/Neck.png" alt="">
                        <img class="draggable-item" data-item="Chuck" src="/assets/Chuck.png" alt="">
                        <img class="draggable-item" data-item="Shank Front" src="/assets/Shank_1.png" alt="">
                        <img class="draggable-item" data-item="Rib" src="/assets/Rib.png" alt="">
                        <img class="draggable-item" data-item="Short Plate" src="/assets/Short_Plate.png" alt="">
                        <img class="draggable-item" data-item="Short Loin" src="/assets/Short_Loin.png" alt="">
                        <img class="draggable-item" data-item="Flank" src="/assets/Flank.png" alt="">
                        <img class="draggable-item" data-item="Sirloin" src="/assets/Sirloin.png" alt="">
                        <img class="draggable-item" data-item="Tenderloin" src="/assets/Tenderloin.png" alt="">                    
                        <img class="draggable-item" data-item="Top Sirloin" src="/assets/Top_Sirloin_1.png" alt="">
                        <img class="draggable-item" data-item="Bottom Sirloin" src="/assets/Bottom_Sirloin.png" alt="">
                        <img class="draggable-item" data-item="Rump" src="/assets/Rump.png" alt="">
                        <img class="draggable-item" data-item="Round" src="/assets/Round.png" alt="">
                        <img class="draggable-item" data-item="Shank Back" src="/assets/Shank.png" alt="">
                        <img class="draggable-item" data-item="Ox Tail" src="/assets/Ox_Tail.png" alt="">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <h2>Choose your Cuts</h2>
        <div class="col-md-6">
            <div id="shopping-cart">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cart-plus-fill" viewBox="0 0 16 16">
                    <path d="M.5 1a.5.5 0 0 0 0 1h1.11l.401 1.607 1.498 7.985A.5.5 0 0 0 4 12h1a2 2 0 1 0 0 4 2 2 0 0 0 0-4h7a2 2 0 1 0 0 4 2 2 0 0 0 0-4h1a.5.5 0 0 0 .491-.408l1.5-8A.5.5 0 0 0 14.5 3H2.89l-.405-1.621A.5.5 0 0 0 2 1H.5zM6 14a1 1 0 1 1-2 0 1 1 0 0 1 2 0zm7 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0zM9 5.5V7h1.5a.5.5 0 0 1 0 1H9v1.5a.5.5 0 0 1-1 0V8H6.5a.5.5 0 0 1 0-1H8V5.5a.5.5 0 0 1 1 0z"/>
                </svg>               
            </div>
        </div>
        <div class="col-md-6">
            <h3>Items</h3>
            <ul id="cart-items">
            </ul>
        </div>
    </div>
</div>
{{!-- jquery UI  --}}
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>
<script>
    $(document).ready(function() {
      $('.draggable-item').draggable({
        helper: 'clone',
        revert: 'invalid'
      });

      $('#shopping-cart').droppable({
        accept: '.draggable-item',
        drop: function(event, ui) {
          var item = ui.helper.data('item');
          $('<li class="item">' + item + '<button class="remove-item"><i class="bi bi-x-circle-fill"></i></button></li>').appendTo('#cart-items');
        }
      });

      $('#cart-items').on('click', '.remove-item', function() {
        $(this).parent().remove();
      });
    });
</script>