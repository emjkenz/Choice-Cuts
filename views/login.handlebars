<div class="loginBody">

    <div class="loginContainer">
        <div class="row">
            <div class="col-12">
                <form method="POST" action="/login/">
                    <div class="form-group">
                        <input type="email" class="form-control {{error}}" id="Email" name="email" placeholder="Email">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control {{error}}" id="Password" name="password" placeholder="Password">
                    </div>
                    {{#if error}}
                        <div id="loginError" class="invalid-feedback d-block">{{message}}</div>
                    {{/if}}
                    <button type="submit" class="btn btn-primary btn-rsvp">Login</button>
                </form>
            </div>
        </div>
    </div>

</div>